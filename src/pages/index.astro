---
// Root redirect to default locale (Japanese)
// Using client-side redirect for instant navigation without flash
const targetUrl = `${import.meta.env.BASE_URL.replace(/\/$/, "")}/ja/`;
---

<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0;url=${targetUrl}`} />
    <link rel="canonical" href={targetUrl} />
    <script is:inline define:vars={{ targetUrl }}>
      window.location.replace(targetUrl);
    </script>
  </head>
  <body></body>
</html>
