---
import clsx from "clsx";

import CONFIGS from "@/configs.global";

interface Props {
  class?: string;
}

const { class: _class } = Astro.props as Props;
---

<footer
  class={clsx(
    "flex items-center justify-center",
    "py-4 mt-8",
    "text-gray-700 dark:text-gray-300",
    _class,
  )}
>
  <p class="text-sm">
    &copy; {new Date().getFullYear()}
    {CONFIGS.APP.AUTHOR} - All rights reserved
  </p>
</footer>
