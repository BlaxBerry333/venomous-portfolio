---
import clsx from "clsx";

import CONFIGS from "@/configs.global";
import logoImg from "@/assets/logo.svg";

interface Props {
  class?: string;
}

const { class: _class } = Astro.props as Props;
---

<header
  class={clsx(
    `fixed top-0 right-0 left-0 z-50 h-[60px] w-full`,
    "mx-auto flex justify-center-safe backdrop-blur-xl md:px-0",
    _class,
  )}
>
  <h1
    class={clsx(
      "m-0 h-full w-full md:w-[1000px] px-[8px]",
      "border-b-1 border-gray-300 dark:border-gray-600",
    )}
  >
    <a href="/venomous-portfolio" class="flex h-full w-max items-center">
      <img
        src={logoImg.src}
        alt={CONFIGS.SITE.NAME}
        draggable="false"
        decoding="async"
        loading="lazy"
        class="block h-[40px] backdrop-blur-[100px]"
      />
    </a>
  </h1>
</header>
